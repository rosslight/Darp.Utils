<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AvaloniaApp.ViewModels"
        xmlns:codeMirror="clr-namespace:Darp.Utils.CodeMirror;assembly=Darp.Utils.CodeMirror"
        xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaTests"
        x:Name="Window">
    <Window.Resources>
        <system:Int32 x:Key="123">123</system:Int32>
        <Grid ColumnDefinitions="*,*" x:Key="MyContent">
            <TextBox Text="{CompiledBinding #Window.ViewModel.Text}" AcceptsReturn="True"/>
            <codeMirror:CodeMirrorEditor Grid.Column="1" MinHeight="400" Name="Editor"
                                         EditorText="123123"
                                         Address="{CompiledBinding #Window.ViewModel.CodeMirror.Address}"/>
        </Grid>
    </Window.Resources>
    <StackPanel>
        <TextBlock Text="{CompiledBinding Greeting}"/>
        <TextBlock Text="{CompiledBinding I18N.Asd}"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="English"
                    Command="{CompiledBinding SetLanguageCommand}"
                    CommandParameter="en"
                    MinWidth="100"/>
            <Button Content="German"
                    Command="{CompiledBinding SetLanguageCommand}"
                    CommandParameter="de"
                    MinWidth="100"/>
            <Button Content="French"
                    Command="{CompiledBinding SetLanguageCommand}"
                    CommandParameter="fr"
                    MinWidth="100"/>
        </StackPanel>
        <Button Content="Open username password dialog"
                Command="{CompiledBinding OpenUsernamePasswordCommand}" MinWidth="100"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Toggle Theme"
                    Click="ToggleTheme_OnClick" MinWidth="100"/>
            <ToggleButton Content="Toogle Readonly"
                           MinWidth="100"/>
        </StackPanel>
        <Button Content="Show for 2 seconds"
                Command="{CompiledBinding ShowTwoSecondsCommand}" MinWidth="100"/>
        <controls:NavigationView SelectionChanged="NavigationView_OnSelectionChanged">
            <controls:NavigationView.MenuItems>
                <controls:NavigationViewItem Content="1 Hello" Tag="{StaticResource 123}" />
                <controls:NavigationViewItem Content="2 Hello" Tag="123123" />
            </controls:NavigationView.MenuItems>
            <controls:Frame Name="MyFrame" />
        </controls:NavigationView>
    </StackPanel>
</Window>
